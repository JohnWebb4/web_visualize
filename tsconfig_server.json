{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./server/",
    "removeComments": true,                
    "strict": true,                        
    "noImplicitAny": true,                 

    "esModuleInterop": true                   
  },
  "exclude": [
    "dist",
    "src",
    "public",
    "./*.js"
  ]
}